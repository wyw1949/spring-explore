<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yoke.mapper.RedPacketMapper">
    <select id="getRedPacketById" resultType="com.yoke.model.RedPacket">
        select * from t_red_packet where id = #{id}
    </select>

    <update id="updateRedPacketById">
        update t_red_packet set stock = stock -1 where id = #{id}
    </update>
</mapper>